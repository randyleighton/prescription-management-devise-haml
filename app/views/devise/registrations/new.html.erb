<div class="border-form-div">
  <h2>Create Account</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-group">
      <%= f.label :email, class: "col-xs-3 control-label" %>
      <div class="col-xs-9">
      <%= f.email_field :email, required: true, autofocus: true, :placeholder => 'email@provider.com', class: "form-control"  %>
       
      </div>
    <div class="form-group">
      <%= f.label :name, class: "col-xs-3 control-label" %>
      <div class="col-xs-9">
        <%= f.text_field :name, :placeholder => 'Your full name', class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "col-xs-3 control-label" %>
      <div class="col-xs-9">
        <%= f.password_field :password, required: true, :placeholder => 'Password with 8 characters', class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-xs-3 control-label" %>
      <div class="col-xs-9">
        <%= f.password_field :password_confirmation, required: true, :placeholder => 'Type it again to confirm', class: "form-control"  %>
      </div>
    </div>
    <div class="form-group">
      <%= f.button :submit, "Create", :class=>"btn btn-primary button-format" %>
    </div>
    <% end %>
  <%= render "devise/shared/links" %>
</div>
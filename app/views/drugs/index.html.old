<% content_for(:title, "Drugs | WoP" ) %>
<div>
  <h3>Current Drugs:</h3>
  <div class="body_fixed col-xs-9 clearfix container-fluid">
      <% @drugs.each do |drug|%>
        <div class="drug_tag"><%= link_to "#{drug.name}", drug_path(drug)%></div>
      <% end %>
  </div>
  <aside class="aside_box col-xs-3 clearfix">
    <div>Management Options</div>
    <div><%= link_to "New Drug", new_drug_path, :class =>"btn btn-primary" %></div>
  </aside>
</div>


= render('/layouts/errors', :object => @drug)

= simple_form_for(@drug, html: {class: 'form-horizontal'}) do |f|
  = f.hidden_field :user_id, value: current_user.id
  .form-group
    = f.label "Drug Name",:name, class: "col-xs-12 col-sm-3 form-label"
    .col-xs-6.col-sm-6
      = f.text_field :name, class: "form-control", :autofocus=>true

  .form-group
    = f.label "Describe what drug is for",:description, class: "col-xs-12 col-sm-3 form-label"
    .col-xs-10.col-sm-8
      = f.text_area :description, class: "form-control"

  .form-group  
    .col-sm-offset-3.col-sm-9
      = button_tag(type: 'submit', class: "btn btn-default btn-float", title: f.object.new_record? ? "Create Drug" : "Update Drug") do 
        %i.fa.fa-check-circle.fa-fw
        = f.object.new_record? ? "Create Drug" : "Update Drug"
      = link_to '<i class="fa fa-chevron-left"></i> Cancel'.html_safe, :back, class: "btn btn-default btn-float", title: "Cancel"
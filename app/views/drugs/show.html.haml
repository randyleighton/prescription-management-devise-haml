- content_for(:title, "#{@drug.name}" )
.jumbotron
  %h1= @drug.name
  = link_to '<i class="fa fa-chevron-left"></i> Back to Drug Library'.html_safe, drugs_path, class: "btn btn-default btn-nofloat btn-lg", title:"Back to Drug Library"

%div.view-pres  
  %table.table.table-bordered.table-striped.table-responsive
    %thead
      %tr
        %th Drug
        %th Description
    %tbody
      %tr
        %td= @drug.name
        %td= @drug.description

  %row
    = link_to '<i class="fa fa-edit fa-fw"></i> Edit this Drug'.html_safe, edit_drug_path(@drug), class: "btn btn-default btn-nofloat", title: "Edit this Drug"
    = link_to '<i class="fa fa-trash fa-fw"></i> Delete this Drug'.html_safe, drug_path(@drug), class: "btn btn-default btn-nofloat", :data => {:confirm => "NEVER delete drugs that there are prescriptions for, are you sure you want to delete this drug and ALL its prescriptions", :method => "delete"}, title: "Delete this Drug, WARNING"
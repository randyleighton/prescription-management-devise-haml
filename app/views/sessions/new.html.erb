<h1>Log In</h1>

<div class="login_form">
  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :name %><br />
      <%= text_field_tag :name, params[:name], :autofocus=>true %>  
    </div>
    <div class="field">
      <%= label_tag :password %><br />
      <%= text_field_tag :password%>
    </div>
    <div class="actions">
      <%= submit_tag "Log In", :class=>"btn btn-primary button-format" %>  
    </div>
  <% end %>
  <p> Need an account? <%= link_to "Signup", signup_path, :class=>"btn btn-primary button-format" %></p>
</div>

<% content_for(:title, "Prescription | WoP" ) %>

<div>
  <h4><%= @prescription.drug.name %></h4>
  <p>Prescription strength: <%= @prescription.drug_uom %></p>
  <p>Renewal every: <%= @prescription.renewal_interval %> months.</p>
</div>

<div>
  <p><%= link_to "Delete this prescription", prescription_path(@prescription), :data => {:confirm => "You sure?", :method => "delete"} %></p>
</div>

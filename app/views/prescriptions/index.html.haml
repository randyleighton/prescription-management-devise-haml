- content_for(:title, "Prescriptions" )
.jumbotron.container-fluid
  %h1 Current Prescriptions
.body_fixed.col-xs-9.clearfix.container
  - @prescriptions.each do |prescription|
    - drug = Drug.find(prescription.drug_id)
    .prescription_tag
      %p= link_to "Prescription for #{drug.name}", prescription_path(prescription)
  
  = link_to "New Prescription", new_prescription_path, :class =>"btn btn-primary"



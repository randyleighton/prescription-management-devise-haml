=render('layouts/errors', :object => @pharmacy)

= simple_form_for(@pharmacy, html: {class: 'form-horizontal'}) do |f|
  = f.hidden_field :user_id, value: current_user.id
  .form-group
    .col-xs-12.col-sm-5
      = f.label "Pharmacy Name ", :name, class: "form-label"
    .col-xs-12.col-sm-5
      = f.text_field :name, class: "form-control"

  .form-group
    .col-xs-12.col-sm-5
      = f.label "Phone Number", :phone, class: "form-label"
    .col-xs-12.col-sm-5
      = f.phone_field :phone, class: "form-control"

  .form-group
    .col-xs-12.col-sm-5
      = f.label "Website Address", :url, class: "form-label"
    .col-xs-12.col-sm-5
      = f.text_field :url, class: "form-control"

  .col-sm-offset-3
    = button_tag("<i id='iconChange'class='fa fa-list-alt'> I want to add an Address (Optional)</i>".html_safe,id:"add-pharm-address",type:'button',class: "btn btn-default btn-nofloat btn-create",title:'Click if you want to to add an address to this pharmacy')

  %div#add-address
    .form-group
      .col-xs-12.col-sm-5
        = f.label "Street Address", :street, class: "form-label"
      .col-xs-12.col-sm-5
        = f.text_field :street, class: "form-control"

    .form-group
      .col-xs-12.col-sm-5
        = f.label "City", :city, class: "form-label"
      .col-xs-12.col-sm-5
        = f.text_field :city, class: "form-control"

    .form-group
      .col-xs-12.col-sm-5
        = f.label "State", :state, class: "form-label"
      .col-xs-12.col-sm-5
        = f.text_field :state, class: "form-control"

    .form-group
      .col-xs-12.col-sm-5
        = f.label "Zip Code", :zip, class: "form-label"
      .col-xs-12.col-sm-5
        = f.text_field :zip, class: "form-control"


  .form-group  
    .col-sm-offset-3.col-sm-9
      = button_tag(type: 'submit', class: "btn btn-default btn-float", title: f.object.new_record? ? "Create Pharmacy" : "Update Pharmacy") do 
        %i.fa.fa-check-circle.fa-fw
        = f.object.new_record? ? "Create Pharmacy" : "Update Pharmacy"
      = link_to '<i class="fa fa-chevron-left"></i> Back'.html_safe, :back, class: "btn btn-default btn-float"

!!!
%html{"ng-app"=>"MainApp"}
%head
= favicon_link_tag 'favicon.ico'
= javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular.min.js"
= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
= javascript_include_tag 'application', 'data-turbolinks-track' => true
= csrf_meta_tags
:javascript
  $(document).ready(function(){
    setTimeout(function(){
      $('#flash_notice').remove();
    }, 4000);
   });
%title= yield(:title)
%body
  %nav.navbar.navbar-default.navbar-fixed-top
    .navbar-header
      %button.navbar-toggle{"data-toggle"=>"collapse","data-target"=>".navbar-collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .navbar-brand
        = link_to root_path, :class=>"heading_text" do
          = image_tag("favicon.ico")
          Prescription Manager

    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li= link_to "About", "#"
        %li= link_to "Contact", "#"
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li= link_to "Prescriptions", prescriptions_path
          %li= link_to "Drugs", drugs_path

          %li.dropdown
            = link_to "#{current_user.name} <b class='caret'></b>".html_safe, "#", class: "dropdown-toggle", data: {toggle: "dropdown"}
            %ul.dropdown-menu
              %li
                = link_to edit_user_registration_path do
                  %i.fa.fa-pencil.fa-fw
                  Edit Profile
              %li
                = link_to destroy_user_session_path, method: :delete do
                  %i.fa.fa-pencil.fa-fw
                  Log Out
        - else
          %li.dropdown
            = link_to "Log In or Create Account <b class='caret'></b>".html_safe, "#", class: "dropdown-toggle", data: {toggle: "dropdown"}
            %ul.dropdown-menu
              %li
                = link_to new_user_registration_path do
                  %i.fa.fa-pencil.fa-fw
                  Create Account
              %li
                = link_to new_user_session_path do
                  %i.fa.fa-pencil.fa-fw
                  Log In


    .yield-top= yield
    #flash_notice.clearfix
      - if flash[:notice] != nil
        .alert.alert-info{:role =>"alert"}
          =flash[:notice]
      - if flash[:alert] != nil
        .alert.alert-danger{:role =>"alert"}
          =flash[:alert]







